extends includes/layout

block headlink
  title 裁判 -- 清华羽协

block content
  include includes/navbar
  
  if typeof(flash) != 'undefined'
    include includes/flash-messages
    mixin flash-messages(flash)
  
  div(class='container text-center')
    hr
    table(class='table table-striped table-bordered table-hover')
      thead
        tr
          th 年份
          th 类型
          th 总数
          th 左
          th 右
          th id1
          th id2
          th id3
          th id4
      tbody
        - for (var i=0;i<ready.length;i++)
          tr
            td= ready[i].year
            td= ready[i].type
            td= ready[i].totalP
            td= ready[i].leftP
            td= ready[i].rightP
            td= ready[i].id1
            td= ready[i].id2
            td= ready[i].id3
            td= ready[i].id4
    
    table(class='table table-striped table-bordered table-hover')
      thead
        tr
          th 年份
          th 类型
          th 总数
          th 左
          th 右
          th id1
          th id2
          th id3
          th id4
          th 裁判
      tbody
        - for (var i=0;i<current.length;i++)
          tr
            td= current[i].year
            td= current[i].type
            td= current[i].totalP
            td= current[i].leftP
            td= current[i].rightP
            td= current[i].id1
            td= current[i].id2
            td= current[i].id3
            td= current[i].id4
            td= current[i].referee
    
    table(class='table table-striped table-bordered table-hover')
      thead
        tr
          th 学号
          th 状态
          th 工作量
      tbody
        - for (var i=0;i<referees.length;i++)
          tr
            td= referees[i].studentid
            td= referees[i].status
            td= referees[i].work
    hr
  
  include includes/footer
